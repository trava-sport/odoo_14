<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='wb_sales_action' model='ir.actions.act_window'>
        <field name="name">Sales</field>
        <field name="res_model">wb.sales</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem name="Sales" id="wb_sales_menu" parent="wb_reports_menu" action="wb_sales_action"/>

    <record id="wb_sales_view_tree" model="ir.ui.view">
        <field name="name">Sales</field>
        <field name="model">wb.sales</field>
        <field name="arch" type="xml">
            <tree>
                <field name="number" optional="show"/>
                <field name="date" optional="show"/>
                <field name="last_change_date_and_time" optional="show"/>
                <field name="supplier_article" optional="show"/>
                <field name="tech_size" optional="show"/>
                <field name="barcode" optional="show"/>
                <field name="quantity" optional="show"/>
                <field name="total_price" optional="show"/>
                <field name="discount_percent" optional="show"/>
                <field name="is_supply" optional="show"/>
                <field name="is_realization" optional="show"/>
                <field name="order_id" optional="show"/>
                <field name="promo_code_discount" optional="show"/>
                <field name="warehouse_name" optional="show"/>
                <field name="country_name" optional="show"/>
                <field name="oblast_okrug_name" optional="show"/>
                <field name="region_name" optional="show"/>
                <field name="income_id" optional="show"/>
                <field name="sale_id" optional="show"/>
                <field name="odid" optional="show"/>
                <field name="spp" optional="show"/>
                <field name="for_pay" optional="show"/>
                <field name="finished_price" optional="show"/>
                <field name="price_with_disc" optional="show"/>
                <field name="nmid" optional="show"/>
                <field name="subject" optional="show"/>
                <field name="category" optional="show"/>
                <field name="brand" optional="show"/>
                <field name="is_storno" optional="show"/>
            </tree>
        </field>
    </record>

</odoo>